<!-- -->
<launch>
  <arg name='host' default='localhost'/>
  <arg name='port' default='2000'/>
  <arg name='role_name' default='ego_vehicle'/>
  <arg name="vehicle_filter" default='vehicle.lincoln*'/>
  <arg name="sensor_definition_file" default="$(find carla_ego_vehicle)/config/sensors_vg.json"/>
  <!-- use comma separated format "x,y,z,roll,pitch,yaw" -->
  <arg name="spawn_point" default="75.0, -2.0, 0.5, 0.0, 0.0, 180.0"/>
  <arg name="town" default='Town01'/>
  <arg name="use_steering_wheel" default="1"/>

  <include file="$(find carla_ros_bridge)/launch/carla_ros_bridge.launch">
    <arg name='host' value='$(arg host)'/>
    <arg name='port' value='$(arg port)'/>
    <arg name='town' value='$(arg town)'/>
  </include>

  <include file="$(find carla_ego_vehicle)/launch/carla_example_ego_vehicle.launch">
    <arg name='host' value='$(arg host)'/>
    <arg name='port' value='$(arg port)'/>
    <arg name="vehicle_filter" value='$(arg vehicle_filter)'/>
    <arg name='role_name' value='$(arg role_name)'/>
    <arg name="spawn_point" value="$(arg spawn_point)"/>
    <arg name="sensor_definition_file" value="$(arg sensor_definition_file)"/>
  </include>

  <include file="$(find carla_manual_control)/launch/carla_manual_control.launch">
    <arg name='role_name' value='$(arg role_name)'/>
    <arg name='use_steering_wheel' value='$(arg use_steering_wheel)'/>
  </include>  

  <!-- Recording Node -->
  <arg name="exclude_topics" default=""/>

  <node pkg="rosbag" type="record" name="rosbag_path_recorder" respawn="true" output="screen" 
        args="-a -o $(find carla_ros_bridge)/bags/route2" />

</launch>
